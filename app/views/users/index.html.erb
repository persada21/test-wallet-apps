<% if flash[:notice] %>
  <div class="alert alert-primary alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <h5><i class="icon fas fa-info"></i>Info</h5>
    <%= notice %>
  </div>
<% end %>

<h3>User</h3>
<br>

<%= link_to 'Create New', new_user_path, class: "btn btn-success btn-xs", style: "width: 100px" %>
<br><br>
<%= search_form_for @search, url: users_path do |f| %>
  <div class="input-group">
    <span class="input-group-append">  
      <%= f.search_field :name_cont, class: 'form-control', placeholder: 'Name'%>
    </span>
    <span class="input-group-append">
      <button type="submit" class="btn btn-primary btn-flat">Search</button>
    </span>
  </div>
<% end %>
<br>
<div id="people-table">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body p-0">
          <table class="table table-bordered table-striped table-hover">
            <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>Username</th>
                <th>Full Name</th>
                <th style="width: 120px">B.Date</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.username %></td>
                  <td><%= user.name %></td>
                  <td><%= user.birth_date&.strftime("%d  %b %Y") %></td>
                 
                  <td style="width: 60px">
                    <%= link_to 'Show', user, class: "btn btn-primary btn-xs", style: "width: 50px" %>
                  </td>
                  <td style="width: 60px">
                    <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning btn-xs", style: "width: 50px" %>
                  </td>
                  <td style="width: 60px">
                    <%= link_to 'Delete', user, class: "btn btn-danger btn-xs", style: "width: 50px", method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>
</div>
<div id="search-results">
</div>
